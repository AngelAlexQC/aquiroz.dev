---
export interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
---

<section class="pt-16 bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center">
  <div class="max-w-6xl mx-auto px-4 py-20">
    <div class="text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
        √Ångel Quiroz
      </h1>
      <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-4xl mx-auto">
        {lang === 'es' 
          ? 'Ingeniero de Software Senior | Full Stack & Tech Lead | Backend, Frontend & Arquitectura'
          : 'Senior Software Engineer | Full Stack & Tech Lead | Backend, Frontend & Architecture'
        }
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/cv-es.pdf" 
          download
          class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors shadow-lg"
        >
          {lang === 'es' ? 'Descargar CV (ES)' : 'Download CV (EN)'}
        </a>
        <a 
          href="/cv-en.pdf" 
          download
          class="border-2 border-blue-600 text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 hover:text-white transition-colors"
        >
          {lang === 'es' ? 'Download CV (EN)' : 'Descargar CV (ES)'}
        </a>
      </div>
    </div>
  </div>
</section>

---
export interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;

const skillCategories = [
  {
    title: lang === 'es' ? 'Desarrollo & Arquitectura' : 'Development & Architecture',
    skills: [
      lang === 'es' ? 'Desarrollo Full Stack' : 'Full Stack Development',
      lang === 'es' ? 'Arquitectura de Software' : 'Software Architecture',
      lang === 'es' ? 'Liderazgo T√©cnico' : 'Technical Leadership'
    ]
  },
  {
    title: 'Backend',
    skills: ['PHP (Yii2, Laravel)', 'TypeScript (NestJS)', 'Node.js']
  },
  {
    title: 'Frontend',
    skills: ['React', 'Next.js', 'Angular', 'Vue.js']
  },
  {
    title: 'DevOps & Cloud',
    skills: ['Docker', 'AWS', 'CI/CD', 'GitHub Actions']
  }
];
---

<section id="skills" class="py-24 bg-white relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute top-20 right-0 w-72 h-72 bg-gradient-to-l from-blue-400/10 to-purple-400/10 rounded-full blur-3xl"></div>
  
  <div class="max-w-7xl mx-auto px-4 relative">
    <div class="text-center mb-16">
      <span class="text-blue-600 font-semibold text-sm uppercase tracking-wider">
        {lang === 'es' ? 'Tecnolog√≠as y herramientas' : 'Technologies & tools'}
      </span>
      <h2 class="text-5xl font-bold mt-4 mb-6">
        <span class="text-gray-900">{lang === 'es' ? 'Aptitudes' : 'Technical'}</span>
        <span class="gradient-text"> {lang === 'es' ? 'T√©cnicas' : 'Skills'}</span>
      </h2>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {skillCategories.map((category, index) => (
        <div class="group bg-gradient-to-br from-white to-gray-50 rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-blue-200">
          <!-- Icon -->
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center text-white text-2xl font-bold mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            {index === 0 && 'üéØ'}
            {index === 1 && '‚öôÔ∏è'}
            {index === 2 && 'üé®'}
            {index === 3 && '‚òÅÔ∏è'}
          </div>
          
          <h3 class="text-xl font-bold text-gray-900 mb-6 group-hover:text-blue-600 transition-colors">
            {category.title}
          </h3>
          
          <ul class="space-y-3">
            {category.skills.map((skill) => (
              <li class="flex items-center text-gray-700 group-hover:text-gray-900 transition-colors">
                <div class="w-2 h-2 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full mr-3 group-hover:scale-125 transition-transform"></div>
                <span class="font-medium">{skill}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Additional tech logos section -->
    <div class="mt-20 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-8">
        {lang === 'es' ? 'Tecnolog√≠as con las que trabajo' : 'Technologies I work with'}
      </h3>
      <div class="flex flex-wrap justify-center items-center gap-8 opacity-60 hover:opacity-100 transition-opacity">
        {/* Add technology logos here */}
        <div class="bg-gray-100 rounded-lg p-4 hover:bg-gray-200 transition-colors">
          <span class="font-mono text-lg font-bold">TypeScript</span>
        </div>
        <div class="bg-gray-100 rounded-lg p-4 hover:bg-gray-200 transition-colors">
          <span class="font-mono text-lg font-bold">React</span>
        </div>
        <div class="bg-gray-100 rounded-lg p-4 hover:bg-gray-200 transition-colors">
          <span class="font-mono text-lg font-bold">Node.js</span>
        </div>
        <div class="bg-gray-100 rounded-lg p-4 hover:bg-gray-200 transition-colors">
          <span class="font-mono text-lg font-bold">Docker</span>
        </div>
      </div>
    </div>
  </div>
</section>

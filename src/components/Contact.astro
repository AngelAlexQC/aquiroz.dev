---
export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
---

<section id="contact" class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16 text-gray-900">
      {lang === "es" ? "Contacto" : "Contact"}
    </h2>

    <div class="max-w-4xl mx-auto text-center">
      <p class="text-lg text-gray-700 mb-8">
        {
          lang === "es"
            ? "Estoy disponible para roles remotos senior y de liderazgo t√©cnico a nivel mundial."
            : "I'm currently open to full-time remote senior and technical leadership roles worldwide."
        }
      </p>

      <div class="grid md:grid-cols-3 gap-8">
        <a
          href="mailto:angel@aquiroz.dev"
          class="flex items-center justify-center space-x-3 bg-gray-50 p-6 rounded-lg hover:bg-gray-100 transition-colors">
          <svg
            class="w-6 h-6 text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"

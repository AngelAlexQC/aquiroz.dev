---
import { projectDates, formatDate } from "../utils/dates";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;

const projects = [
  {
    title: "Urban Recolector System",
    period: `${formatDate(projectDates.urbanRecolectorStart, lang).split(' ')[1]} – ${formatDate(projectDates.urbanRecolectorEnd, lang).split(' ')[1]}`,
    description:
      lang === "es"
        ? "Sistema de gestión de recolección de residuos con geolocalización y notificaciones (Laravel, NodeJS, Angular, Ionic). Mejoró eficiencia operativa en un 30%."
        : "Waste collection management system with geolocation and notifications (Laravel, NodeJS, Angular, Ionic). Improved operational efficiency by 30%.",
    tags: ["Laravel", "Node.js", "Angular", "Ionic", "Firebase"],
  },
  {
    title: "ITSUP Integrated Management System",
    period: `${formatDate(projectDates.itsupStart, lang).split(' ')[1]} – ${formatDate(projectDates.itsupEnd, lang).split(' ')[1]}`,
    description:
      lang === "es"
        ? "Plataforma académica integral: admisión, matriculación, pagos, facturación electrónica (Datil API). Incrementó eficiencia administrativa en un 40%."
        : "Comprehensive academic platform: admission, enrollment, payments, electronic invoicing (Datil API). Increased administrative efficiency by 40%.",
    tags: ["Laravel", "Angular", "Datil API", "MySQL"],
  },
];
---

<section id="projects" class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16 text-gray-900">
      {lang === "es" ? "Proyectos Destacados" : "Featured Projects"}
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-xl font-semibold text-gray-900">
                {project.title}
              </h3>
              <span class="text-sm text-gray-600">{project.period}</span>
            </div>
            <p class="text-gray-700 mb-4 leading-relaxed">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

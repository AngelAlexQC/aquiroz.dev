---
import Navigation from "../components/Navigation.astro";
import "../styles/global.css";
export interface Props {
  title: string;
  lang: "es" | "en";
}

const { title, lang } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={lang === "es"
        ? "Ingeniero de Software Senior especializado en desarrollo full-stack, arquitectura y liderazgo técnico"
        : "Senior Software Engineer specialized in full-stack development, architecture and technical leadership"}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <style>
      * {
        font-family: 'Inter', sans-serif;
      }
      
      .font-mono {
        font-family: 'JetBrains Mono', monospace;
      }
      
      .gradient-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .animate-float {
        animation: float 6s ease-in-out infinite;
      }
      
      @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
      }
      
      .animate-fade-up {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeUp 0.8s ease-out forwards;
      }
      
      @keyframes fadeUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .glass-effect {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.18);
      }
    </style>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={lang === "es"
        ? "Ingeniero de Software Senior especializado en desarrollo full-stack"
        : "Senior Software Engineer specialized in full-stack development"}
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />

    <!-- Alternate languages -->
    <link
      rel="alternate"
      hreflang="es"
      href={`https://aquiroz.dev/es${currentPath.replace("/en", "").replace("/es", "")}`}
    />
    <link
      rel="alternate"
      hreflang="en"
      href={`https://aquiroz.dev/en${currentPath.replace("/en", "").replace("/es", "")}`}
    />
    <link
      rel="alternate"
      hreflang="x-default"
      href={`https://aquiroz.dev/es${currentPath.replace("/en", "").replace("/es", "")}`}
    />
  </head>
  <body class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 text-gray-900 antialiased">
    <Navigation lang={lang} />
    <main>
      <slot />
    </main>

    <footer class="bg-gray-800 text-white py-8">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <p>
          &copy; 2024 Ángel Quiroz. {
            lang === "es"
              ? "Todos los derechos reservados."
              : "All rights reserved."
          }
        </p>
      </div>
    </footer>
  </body>
</html>
